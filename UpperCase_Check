
#include <stdio.h>
#include <string.h>
int main()
{
    char ch[10];
    int flag = 0,i,c=0;
    printf("Enter a string \n");
    gets(ch);
    for(i=0;i<10;i++)
    {
        if(ch[i]>='A'||ch[i]<='Z')
        flag = 1;
        else 
        { flag=0; break;}
    }
    for(i=0;i<10;i++)
    {
        c++;
    }
    if(flag==1)
    printf("Uppercase");
    else
    printf("Not in uppercase\n");
    printf("No. of characters: %d",c);
    return 0;
}
